@inherits LayoutComponentBase
@using Radzen

<RadzenComponents />

<RadzenLayout Style="min-height:100vh">
    <RadzenSidebar @bind-Expanded="sidebarExpanded" Style="width:250px">
        <NavMenu />
    </RadzenSidebar>

    <RadzenHeader Style="display: flex; align-items: center;">
        <RadzenSidebarToggle Click="ToggleSidebar" />
        <h1 class="ms-2 mb-0">CryptoTracker</h1>
    </RadzenHeader>

    <RadzenBody>
        <div class="p-4">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

@code {
    private bool sidebarExpanded = true;

    void ToggleSidebar()
    {
        sidebarExpanded = !sidebarExpanded;
    }
}
