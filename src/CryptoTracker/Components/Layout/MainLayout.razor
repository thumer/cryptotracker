@inherits LayoutComponentBase

<Layout>
    <LayoutHeader Class="bg-dark text-white px-4" Style="border-bottom:2px solid #0b6b6b;">
        <h1 class="logo my-2">CryptoTracker</h1>
    </LayoutHeader>
    <Layout>
        <LayoutSider Background="Background.Light">
            <NavMenu />
        </LayoutSider>
        <LayoutContent Class="p-4">
            @Body
        </LayoutContent>
    </Layout>
</Layout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
