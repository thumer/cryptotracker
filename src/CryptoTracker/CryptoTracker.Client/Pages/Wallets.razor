@page "/wallets"
@rendermode InteractiveAuto
@using CryptoTracker.Shared
@inject HttpClient HttpClient

<PageTitle>Wallets</PageTitle>

<h1>Wallets</h1>

<div class="mb-3" style="max-width:300px;">
    <input class="form-control" @bind="EditName" placeholder="Wallet Name" />
    <button class="btn btn-primary mt-2" @onclick="Save">Speichern</button>
    <button class="btn btn-secondary mt-2" @onclick="NewWallet">Neu</button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var w in WalletsList)
        {
            <tr>
                <td>@w.Name</td>
                <td>
                    <button class="btn btn-sm btn-secondary me-1" @onclick="(() => Edit(w))">Ändern</button>
                    <button class="btn btn-sm btn-danger" @onclick="(() => Delete(w.Id))">Löschen</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">@ErrorMessage</div>
}
